<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.onur.oyuncubul.view_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/kalearkasi"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/kontrol"/>

        <TextView
            android:id="@+id/denemelik"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="TextView" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/isim"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="Textview"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_phone_android_black_24dp" />

        <TextView
            android:id="@+id/telefon"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/deneme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="TextView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="190dp"
        android:height="35dp"
        android:textColor="#FFFFFF"
        android:shadowColor="#52A84C"
        android:background="@drawable/buton_tasarimi"
        android:layout_height="wrap_content"
        android:text="Teklif GÃ¶nder"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:id="@+id/bilgiListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
